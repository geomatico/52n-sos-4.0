<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.n52.sos.ds.hibernate.entities.ObservableProperty" table="observable_property">
        <id name="observablePropertyId" type="long">
            <column name="observable_property_id" />
            <generator class="sequence">
            	<param name="sequence">observable_property_id_seq</param>
            </generator>
        </id>
        <property name="identifier" type="string">
            <column name="identifier" not-null="true" unique="true" />
        </property>
        <property name="description" type="string">
            <column name="description" />
        </property>
    </class>
</hibernate-mapping>
