<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.n52.sos.ds.hibernate.entities.BlobValue" table="blob_value">
        <id name="blobValueId" type="long">
            <column name="blob_value_id" />
            <generator class="sequence">
            	<param name="sequence">blob_value_id_seq</param>
            </generator>
        </id>
        <property name="value" type="blob">
            <column name="value" not-null="true" unique="true" />
        </property>
    </class>
</hibernate-mapping>
