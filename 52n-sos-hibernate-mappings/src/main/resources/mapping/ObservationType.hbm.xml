<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.n52.sos.ds.hibernate.entities.ObservationType" table="observation_type">
        <id name="observationTypeId" type="long">
            <column name="observation_type_id" />
            <generator class="sequence">
            	<param name="sequence">observation_type_id_seq</param>
            </generator>
        </id>
        <property name="observationType" type="string">
            <column name="observation_type" not-null="true" unique="true" />
        </property>
    </class>
</hibernate-mapping>
