<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.n52.sos.ds.hibernate.entities.ObservationConstellation" table="observation_constellation">
        <id name="observationConstellationId" type="long">
            <column name="observation_constellation_id" />
            <generator class="sequence">
            	<param name="sequence">observation_constellation_id_seq</param>
            </generator>
        </id>

        <many-to-one name="observableProperty" class="org.n52.sos.ds.hibernate.entities.ObservableProperty" fetch="join">
            <column name="observable_property_id" not-null="true" />
        </many-to-one>
        <many-to-one name="procedure" class="org.n52.sos.ds.hibernate.entities.Procedure" fetch="join">
            <column name="procedure_id" not-null="true" />
        </many-to-one>
        <set name="observationConstellationOfferingObservationTypes" table="observation_constellation_offering_observation_type" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="observation_constellation_id" />
            </key>
            <one-to-many class="org.n52.sos.ds.hibernate.entities.ObservationConstellationOfferingObservationType" />
        </set>
    </class>
</hibernate-mapping>
