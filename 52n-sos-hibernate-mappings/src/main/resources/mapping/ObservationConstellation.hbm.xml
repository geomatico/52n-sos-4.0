<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.n52.sos.ds.hibernate.entities.ObservationConstellation" table="observation_constellation">
        <id name="observationConstellationId" type="long">
            <column name="observation_constellation_id" />
            <generator class="sequence">
            	<param name="sequence">observation_constellation_id_seq</param>
            </generator>
        </id>
        <many-to-one name="observableProperty" class="org.n52.sos.ds.hibernate.entities.ObservableProperty" fetch="join">
            <column name="observable_property_id" not-null="true" />
        </many-to-one>
        <many-to-one name="procedure" class="org.n52.sos.ds.hibernate.entities.Procedure" fetch="join">
            <column name="procedure_id" not-null="true" />
        </many-to-one>
        <many-to-one name="observationType" class="org.n52.sos.ds.hibernate.entities.ObservationType" fetch="select">
            <column name="observation_type_id" not-null="true"/>
        </many-to-one>
        <many-to-one name="offering" class="org.n52.sos.ds.hibernate.entities.Offering" fetch="select">
            <column name="offering_id" not-null="true" />
        </many-to-one>
        <property name="deleted" type="boolean">
            <column name="deleted" not-null="true" default="true"/>
        </property>
    </class>
</hibernate-mapping>
