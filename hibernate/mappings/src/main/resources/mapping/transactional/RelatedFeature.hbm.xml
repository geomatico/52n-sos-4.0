<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.n52.sos.ds.hibernate.entities.RelatedFeature" table="related_feature">
        <id name="relatedFeatureId" type="long">
            <column name="related_feature_id" />
            <generator class="sequence">
            	<param name="sequence">related_feature_id_seq</param>
            </generator>
        </id>
        <many-to-one name="featureOfInterest" class="org.n52.sos.ds.hibernate.entities.TFeatureOfInterest" fetch="join" foreign-key="related_feature_feature_of_interest_fk">
            <column name="feature_of_interest_id" not-null="true" />
        </many-to-one>
        <set name="relatedFeatureRoles" table="related_feature_has_related_feature_role" inverse="false" lazy="true" fetch="join">
            <key>
                <column name="related_feature_id" not-null="true" />
            </key>
            <many-to-many entity-name="org.n52.sos.ds.hibernate.entities.RelatedFeatureRole" foreign-key="related_feature_related_feature_role_fk">
                <column name="related_feature_role_id" not-null="true" />
            </many-to-many>
        </set>
        <set name="offerings" table="offering_has_related_feature" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="related_feature_id" not-null="true" />
            </key>
            <many-to-many entity-name="org.n52.sos.ds.hibernate.entities.TOffering" foreign-key="related_feature_offering_fk">
                <column name="offering_id" not-null="true" />
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>
