<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.n52.sos.ds.hibernate.entities.ObservationConstellation" table="observation_constellation" >
        <id name="observationConstellationId" type="long">
            <column name="observation_constellation_id" />
            <generator class="sequence">
            	<param name="sequence">observation_constellation_id_seq</param>
            </generator>
        </id>
        <many-to-one name="observableProperty" class="org.n52.sos.ds.hibernate.entities.ObservableProperty" fetch="join" foreign-key="observation_constellation_observable_property_fk" unique-key="observtion_constellation_identity">
            <column index="observation_constellation_observable_property_idx" name="observable_property_id" not-null="true" />
        </many-to-one>
        <many-to-one name="procedure" class="org.n52.sos.ds.hibernate.entities.Procedure" fetch="join" foreign-key="observation_constellation_procedure_fk" unique-key="observtion_constellation_identity">
            <column index="observation_constellation_procedure_idx" name="procedure_id" not-null="true" />
        </many-to-one>
        <many-to-one name="observationType" class="org.n52.sos.ds.hibernate.entities.ObservationType" fetch="select" foreign-key="observation_constellation_observation_type_fk" >
            <column name="observation_type_id" />
        </many-to-one>
        <many-to-one name="offering" class="org.n52.sos.ds.hibernate.entities.Offering" fetch="select" foreign-key="observation_constellation_offering_fk" unique-key="observtion_constellation_identity">
            <column index="observation_constellation_offering_idx" name="offering_id" not-null="true" />
        </many-to-one>
        <property name="deleted" type="boolean">
            <column name="deleted" not-null="true" default="false"/>
        </property>
        <property name="hiddenChild" type="boolean">
            <column name="hidden_child" not-null="true" default="false"/>
        </property>
    </class>
</hibernate-mapping>
