<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.n52.sos.ds.hibernate.entities.Offering" table="offering">
        <id name="offeringId" type="long">
            <column name="offering_id" />
            <generator class="sequence">
            	<param name="sequence">offering_id_seq</param>
            </generator>
        </id>
        <discriminator column="hibernate_discriminator" type="boolean" />
        <property name="identifier" type="string">
            <column index="offering_identifier_idx" name="identifier" not-null="true" unique="true" />
        </property>
        <property name="name" type="string">
            <column name="name" />
        </property>
    </class>
</hibernate-mapping>
