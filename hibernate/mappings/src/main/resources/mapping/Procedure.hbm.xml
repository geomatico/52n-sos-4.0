<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.n52.sos.ds.hibernate.entities.Procedure" table="procedure">
        <id name="procedureId" type="long">
            <column name="procedure_id" />
            <generator class="sequence">
            	<param name="sequence">procedure_id_seq</param>
            </generator>
        </id>
        <many-to-one name="procedureDescriptionFormat" class="org.n52.sos.ds.hibernate.entities.ProcedureDescriptionFormat" fetch="join">
            <column name="procedure_description_format_id" not-null="true" />
        </many-to-one>
        <property name="identifier" type="string">
            <column name="identifier" not-null="true" unique="true" />
        </property>
        <property name="deleted" type="boolean">
            <column name="deleted" not-null="true" default="false"/>
        </property>
        <!-- optional properties, used for automatic sensor description creation if available -->
        <!-- <property name="geom" type="org.hibernate.spatial.GeometryType">
            <column name="geom" unique="true" />
        </property> -->
        <!-- supports types big_decimal and string -->
        <!--  
        <property name="longitude" type="big_decimal">
           <column name="longitude" unique="true" />
        </property>
        <property name="latitude" type="big_decimal">
        	<column name="latitude" unique="true" />
        </property>
        <property name="altitude" type="big_decimal">
        	<column name="altitude" unique="true" />
        </property>
        <property name="srid" type="integer">
        	<column name="srid" unique="true" />
        </property> 
        -->
        <set name="validProcedureTimes" table="valid_procedure_time" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="procedure_id" not-null="true" />
            </key>
            <one-to-many class="org.n52.sos.ds.hibernate.entities.ValidProcedureTime" />
        </set>
        <set name="childProcedures" table="sensor_system" inverse="false" lazy="true" fetch="select">
            <key>
                <column name="parent_sensor_id" not-null="true" />
            </key>
            <many-to-many entity-name="org.n52.sos.ds.hibernate.entities.Procedure">
                <column name="child_sensor_id" not-null="true" />
            </many-to-many>
        </set>
        <set name="parentProcedures" table="sensor_system" inverse="false" lazy="true" fetch="select">
            <key>
                <column name="child_sensor_id" not-null="true" />
            </key>
            <many-to-many entity-name="org.n52.sos.ds.hibernate.entities.Procedure">
                <column name="parent_sensor_id" not-null="true" />
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>
