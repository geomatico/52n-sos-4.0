<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.n52.sos.ds.hibernate.entities.Observation" table="observation">
        <id name="observationId" type="long">
            <column name="observation_id" />
            <generator class="sequence">
            	<param name="sequence">observation_id_seq</param>
            </generator>
        </id>
        <many-to-one name="featureOfInterest" class="org.n52.sos.ds.hibernate.entities.FeatureOfInterest" fetch="select">
            <column name="feature_of_interest_id" not-null="true" />
        </many-to-one>
        <many-to-one name="observableProperty" class="org.n52.sos.ds.hibernate.entities.ObservableProperty" fetch="join">
            <column name="observable_property_id" not-null="true" />
        </many-to-one>
        <many-to-one name="procedure" class="org.n52.sos.ds.hibernate.entities.Procedure" fetch="join">
            <column name="procedure_id" not-null="true" />
        </many-to-one>
        <property name="identifier" type="string">
            <column name="identifier" not-null="true" />
        </property>
        <many-to-one name="codespace" class="org.n52.sos.ds.hibernate.entities.Codespace" fetch="select">
            <column name="codespace_id" not-null="true" />
        </many-to-one>
        <property name="deleted" type="boolean">
            <column name="deleted" not-null="true" default="false"/>
        </property>
        <property name="phenomenonTimeStart" type="timestamp">
            <column name="phenomenon_time_start" length="29" not-null="true" />
        </property>
        <property name="phenomenonTimeEnd" type="timestamp">
            <column name="phenomenon_time_end" length="29" not-null="true" />
        </property>
        <property name="resultTime" type="timestamp">
            <column name="result_time" length="29" not-null="true" />
        </property>
        <property name="validTimeStart" type="timestamp">
            <column name="valid_time_start" length="29" />
        </property>
        <property name="validTimeEnd" type="timestamp">
            <column name="valid_time_end" length="29" />
        </property>
        <many-to-one name="unit" class="org.n52.sos.ds.hibernate.entities.Unit" fetch="join">
            <column name="unit_id" not-null="false" />
        </many-to-one>
        <property name="setId" type="java.lang.String">
            <column name="set_id" />
        </property>
        <set name="offerings" table="observation_relates_to_offering" inverse="false" lazy="true" fetch="select">
            <key>
                <column name="observation_id" not-null="true" />
            </key>
            <many-to-many entity-name="org.n52.sos.ds.hibernate.entities.Offering">
                <column name="offering_id" not-null="true" />
            </many-to-many>
        </set>
        <set name="spatialFilteringProfiles" table="observation_has_spatial_filtering_profile" inverse="false" lazy="true" fetch="select">
            <key>
                <column name="observation_id" not-null="true" unique="true" />
            </key>
            <many-to-many entity-name="org.n52.sos.ds.hibernate.entities.SpatialFilteringProfile">
                <column name="spatial_filtering_profile_id" not-null="true" />
            </many-to-many>
        </set>

        <set name="qualities" table="observation_has_quality" inverse="false" lazy="true" fetch="select">
            <key>
                <column name="observation_id" not-null="true" />
            </key>
            <many-to-many entity-name="org.n52.sos.ds.hibernate.entities.Quality">
                <column name="quality_id" not-null="true" />
            </many-to-many>
        </set>
        <joined-subclass name="org.n52.sos.ds.hibernate.entities.BlobObservation" extends="org.n52.sos.ds.hibernate.entities.Observation" table="observation_has_blob_value">
        	<key column="observation_id"/>
         	<many-to-one name="value" class="org.n52.sos.ds.hibernate.entities.BlobValue">
                <column name="blob_value_id" not-null="true" />
            </many-to-one>
        </joined-subclass>
		<joined-subclass name="org.n52.sos.ds.hibernate.entities.BooleanObservation" extends="org.n52.sos.ds.hibernate.entities.Observation" table="observation_has_boolean_value">
        	<key column="observation_id"/>
        	<component name="value" class="org.n52.sos.ds.hibernate.entities.BooleanValue">
        		<property name="value" column="value" type="boolean"/>
        	</component>
        </joined-subclass>
		<joined-subclass name="org.n52.sos.ds.hibernate.entities.CategoryObservation" extends="org.n52.sos.ds.hibernate.entities.Observation" table="observation_has_category_value">
        	<key column="observation_id"/>
         	<many-to-one name="value" class="org.n52.sos.ds.hibernate.entities.CategoryValue">
                <column name="category_value_id" not-null="true" />
            </many-to-one>
        </joined-subclass>
		<joined-subclass name="org.n52.sos.ds.hibernate.entities.CountObservation" extends="org.n52.sos.ds.hibernate.entities.Observation" table="observation_has_count_value">
        	<key column="observation_id"/>
        	<component name="value" class="org.n52.sos.ds.hibernate.entities.CountValue">
        		<property name="value" column="value" type="integer"/>
        	</component>
        </joined-subclass>
		<joined-subclass name="org.n52.sos.ds.hibernate.entities.GeometryObservation" extends="org.n52.sos.ds.hibernate.entities.Observation" table="observation_has_geometry_value">
        	<key column="observation_id"/>
         	<many-to-one name="value" class="org.n52.sos.ds.hibernate.entities.GeometryValue">
                <column name="geometry_value_id" not-null="true" />
            </many-to-one>
        </joined-subclass>
		<joined-subclass name="org.n52.sos.ds.hibernate.entities.NumericObservation" extends="org.n52.sos.ds.hibernate.entities.Observation" table="observation_has_numeric_value">
        	<key column="observation_id"/>
         	<many-to-one name="value" class="org.n52.sos.ds.hibernate.entities.NumericValue">
                <column name="numeric_value_id" not-null="true" />
            </many-to-one>
        </joined-subclass>
		<joined-subclass name="org.n52.sos.ds.hibernate.entities.TextObservation" extends="org.n52.sos.ds.hibernate.entities.Observation" table="observation_has_text_value">
        	<key column="observation_id"/>
         	<many-to-one name="value" class="org.n52.sos.ds.hibernate.entities.TextValue">
                <column name="text_value_id" not-null="true" />
            </many-to-one>
        </joined-subclass>
    </class>
</hibernate-mapping>
