<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.n52.sos.ds.hibernate.entities.FeatureOfInterest" table="feature_of_interest">
        <id name="featureOfInterestId" type="long">
            <column name="feature_of_interest_id" />
            <generator class="sequence">
            	<param name="sequence">feature_of_interest_id_seq</param>
            </generator>
        </id>
        <many-to-one name="featureOfInterestType" class="org.n52.sos.ds.hibernate.entities.FeatureOfInterestType" fetch="join">
            <column name="feature_of_interest_type_id" not-null="true" />
        </many-to-one>
        <property name="identifier" type="string">
            <column name="identifier" />
        </property>
        <many-to-one name="codespace" class="org.n52.sos.ds.hibernate.entities.Codespace" fetch="select">
            <column name="codespace_id" not-null="true" />
        </many-to-one>
        <property name="name" type="string">
            <column name="name" />
        </property>
        <property name="geom" type="org.hibernate.spatial.GeometryType">
            <column name="geom" unique="true" />
        </property>
        <property name="descriptionXml" type="string">
            <column name="description_xml" />
        </property>
        <property name="url" type="string">
            <column name="url" unique="true" />
        </property>
        <!-- supports types big_decimal and string -->
        <!--  
        <property name="longitude" type="big_decimal">
           <column name="longitude" unique="true" />
        </property>
        <property name="latitude" type="big_decimal">
        	<column name="latitude" unique="true" />
        </property>
        <property name="altitude" type="big_decimal">
        	<column name="altitude" unique="true" />
        </property>
        <property name="srid" type="integer">
        	<column name="srid" unique="true" />
        </property> 
        -->
        <set name="featureOfInterestsForChildFeatureId" table="feature_relation" inverse="false" lazy="true" fetch="select">
            <key>
                <column name="parent_feature_id" not-null="true" />
            </key>
            <many-to-many entity-name="org.n52.sos.ds.hibernate.entities.FeatureOfInterest">
                <column name="child_feature_id" not-null="true" />
            </many-to-many>
        </set>
        <set name="featureOfInterestsForParentFeatureId" table="feature_relation" inverse="false" lazy="true" fetch="select">
            <key>
                <column name="child_feature_id" not-null="true" />
            </key>
            <many-to-many entity-name="org.n52.sos.ds.hibernate.entities.FeatureOfInterest">
                <column name="parent_feature_id" not-null="true" />
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>
