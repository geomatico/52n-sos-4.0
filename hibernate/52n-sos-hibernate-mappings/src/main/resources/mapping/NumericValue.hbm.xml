<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.n52.sos.ds.hibernate.entities.NumericValue" table="numeric_value">
        <id name="numericValueId" type="long">
            <column name="numeric_value_id" />
            <generator class="sequence">
            	<param name="sequence">numeric_value_id_seq</param>
            </generator>
        </id>
        <property name="value" type="big_decimal">
            <column name="value" precision="131089" scale="0" not-null="true" unique="true" />
        </property>
    </class>
</hibernate-mapping>
